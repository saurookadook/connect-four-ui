{
    "name": "ts-app-playground",
    "private": true,
    "version": "0.0.0",
    "type": "module",
    "engines": {
        "node": ">=20.0.0",
        "pnpm": ">=8.0.0"
    },
    "packageManager": "pnpm@9.15.3",
    "workspaces": [
        "packages/*"
    ],
    "scripts": {
        "dev": "vite",
        "build": "tsc -b && vite build",
        "lint": "eslint .",
        "preview": "vite preview",
        "client:start": "vite build && pnpm vite",
        "test": "vitest",
        "test:w": "vitest --watchAll",
        "test:cov": "vitest --coverage"
    },
    "dependencies": {
        "@saurookkadookk/react-utils-combine-reducers": "^1.0.0",
        "react": "^18.3.1",
        "react-dom": "^18.3.1",
        "react-router-dom": "^7.6.0"
    },
    "devDependencies": {
        "@eslint/js": "^9.22.0",
        "@testing-library/jest-dom": "^6.6.3",
        "@testing-library/react": "^16.1.0",
        "@testing-library/user-event": "^14.5.2",
        "@types/node": "^22.15.3",
        "@types/react": "^19.0.10",
        "@types/react-dom": "^19.0.4",
        "@typescript-eslint/eslint-plugin": "^8.31.1",
        "@vitejs/plugin-react": "^4.3.4",
        "eslint": "^9.22.0",
        "eslint-plugin-react-hooks": "^5.2.0",
        "eslint-plugin-react-refresh": "^0.4.19",
        "globals": "^16.0.0",
        "jsdom": "^26.1.0",
        "lerna": "^8.1.9",
        "prettier": "^3.3.3",
        "rimraf": "^6.0.1",
        "typescript": "~5.7.2",
        "typescript-eslint": "^8.26.1",
        "vite": "^6.3.1",
        "vitest": "^3.1.4"
    }
}
