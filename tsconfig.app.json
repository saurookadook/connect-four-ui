{
    "extends": "./tsconfig.common.json",
    "compilerOptions": {
        "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
        "target": "ES2020",
        "useDefineForClassFields": true,
        "lib": ["ESNEXT", "DOM", "DOM.Iterable"],
        "module": "ESNext",
        "paths": {
            "@src/*": ["./src/*"],
            "@ConnectFour/*": ["./src/pages/ConnectFour/*"]
